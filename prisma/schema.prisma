model Activity {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  activityType String

  type      String
  name      String?
  details   String?

  startedAt DateTime
  endedAt   DateTime?
  duration  Int?
}