

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  createdAt DateTime @default(now())

  discordId   String   @unique
  username String   


  // status    Status[]
  activities Activity[]
}

